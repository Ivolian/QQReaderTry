<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="47dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical">

        <com.example.QQReader.OpenSourceWidget.astuetz.PagerSlidingTabStrip
                android:id="@+id/tabs"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="match_parent"/>

        <View android:background="@android:color/black"
              android:layout_width="0.2dp"
              android:layout_height="24dp"/>

        <LinearLayout android:id="@+id/llMenu"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">
            <ImageView android:id="@+id/ivMenu"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:src="@drawable/menu"
                       android:layout_marginLeft="22dp"
                       android:layout_marginRight="21dp"
                       android:contentDescription="@null"/>
        </LinearLayout>

    </LinearLayout>

    <View android:layout_height="0.2dp"
          android:layout_width="match_parent"
          android:background="@color/tab_topline"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>